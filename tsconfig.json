{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",

    /* Modules */
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"],
      "@@TestEnv/*": ["test-utils/setup/*"]
    },

    /* Emit */
    "noEmit": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  }
}
