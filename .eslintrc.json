{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "jest"],
  "rules": {
    "object-curly-newline": "off",
    "comma-dangle": "off",
    "import/extensions": [
      "warn",
      "always",
      {
        "ts": "never"
      }
    ],
    "semi": "off",
    "@typescript-eslint/semi": ["error"]
  },
  "root": true,
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
